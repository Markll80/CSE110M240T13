<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110mt13.tritonprofessorraterv1.ProfPage"
    android:background="@mipmap/b5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.IconMenu.Item"
        android:text="Prof Name"
        android:textSize="32dp"
        android:id="@+id/Prof_name"
        android:textColor="#000000"
        android:allowUndo="false"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/addRatingButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Easiness:"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/Prof_Ess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Prof_name"
        android:layout_alignRight="@+id/Prof_Hlp"
        android:layout_alignEnd="@+id/Prof_Hlp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Helpfulness:"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/Prof_Hlp"
        android:layout_below="@+id/Prof_Ess"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Prof_name"
        android:layout_alignEnd="@+id/Prof_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clarity:"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/Prof_Clt"
        android:layout_below="@+id/Prof_Hlp"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Prof_Hlp"
        android:layout_alignEnd="@+id/Prof_Hlp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/list_view_prof_comment"
        android:layout_alignEnd="@+id/list_view_prof_comment"
        android:fillViewport="true"
        android:layout_alignParentEnd="false" />


    <cse110mt13.tritonprofessorraterv1.ProfPage.NonScrollListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_prof_comment"
        android:layout_below="@+id/Prof_Clt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollIndicators="bottom"
        android:smoothScrollbar="true"
        android:layout_above="@+id/addRatingButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/easiness_val"
        android:layout_above="@+id/Prof_Hlp"
        android:layout_toRightOf="@+id/Prof_Ess"
        android:layout_toEndOf="@+id/Prof_Ess" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/helpfulness_v"
        android:layout_alignTop="@+id/Prof_Hlp"
        android:layout_toRightOf="@+id/Prof_Hlp"
        android:layout_toEndOf="@+id/Prof_Hlp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value"
        android:textSize="20dp"
        android:textColor="#434242"
        android:id="@+id/clarity_v"
        android:layout_above="@+id/list_view_prof_comment"
        android:layout_toRightOf="@+id/Prof_Clt"
        android:layout_toEndOf="@+id/Prof_Clt" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addRating"
        android:id="@+id/addRatingButton"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignRight="@+id/list_view_prof_comment"
        android:layout_alignEnd="@+id/list_view_prof_comment" />

</RelativeLayout>
