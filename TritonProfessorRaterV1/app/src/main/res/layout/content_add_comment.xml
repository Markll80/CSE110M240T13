<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cse110mt13.tritonprofessorraterv1.AddComment"
    tools:showIn="@layout/activity_add_comment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="AddComment"
        android:id="@+id/addComment"
        android:background="@drawable/rectangle_drawable_back"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ProfName"
        android:id="@+id/acProfName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/acSubmit"
        android:layout_below="@+id/addComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/acCancel"
        android:layout_below="@+id/addComment"
        android:layout_toRightOf="@+id/acSubmit"
        android:layout_toEndOf="@+id/acSubmit" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CourseName"
        android:id="@+id/acCourseName"
        android:layout_below="@+id/acProfName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clarity"
        android:id="@+id/acClarity"
        android:layout_below="@+id/acCourseName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Easiness"
        android:id="@+id/acEasy"
        android:layout_below="@+id/acClarity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Helpfulness"
        android:id="@+id/acHelp"
        android:layout_below="@+id/acEasy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course"
        android:id="@+id/acAddCourse"
        android:layout_below="@+id/acProfName"
        android:background="@drawable/rectangle_drawable_back"
        android:layout_toRightOf="@+id/acCourseName"
        android:layout_toEndOf="@+id/acCourseName"
        android:inputType="text" />

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ratingC"
        android:layout_alignTop="@+id/acClarity"
        android:layout_alignLeft="@+id/acAddCourse"
        android:layout_alignStart="@+id/acAddCourse" />

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ratingE"
        android:layout_alignTop="@+id/acEasy"
        android:layout_alignLeft="@+id/acEasy"
        android:layout_alignStart="@+id/acAddCourse" />

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ratingH"
        android:layout_alignTop="@+id/acHelp"
        android:layout_alignLeft="@+id/acHelp"
        android:layout_alignStart="@+id/acAddCourse" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comment:"
        android:id="@+id/textView5"
        android:layout_below="@+id/acHelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
