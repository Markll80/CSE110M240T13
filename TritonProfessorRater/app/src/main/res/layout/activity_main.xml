<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="radarx.tritonprofessorrater.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/bSearch"
        android:layout_alignTop="@+id/etSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSearch"
        android:layout_toLeftOf="@+id/bSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Class/Professor Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="New Text"
        android:textColor="#000000"
        android:background="@drawable/rectangle_drawable_back"
        android:id="@+id/tvBestProf"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="New Text"
        android:textColor="#000000"
        android:background="@drawable/rectangle_drawable_back"
        android:id="@+id/tvSecondBest"
        android:layout_below="@+id/tvBestProf"
        android:layout_alignLeft="@+id/tvBestProf"
        android:layout_marginTop="12dp"
        android:layout_alignStart="@+id/tvBestProf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Rated Professors"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/bSearch"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
